<% content_for :title, "Todo Lists" %>

<p style="color: green;"><%= notice %></p>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4">My Todo Lists</h2>

      <div id="todo_lists">
        <% @todo_lists.each do |todo_list| %>
          <div class="d-flex align-items-center justify-content-between mb-3">
            <!-- Verifica se todos os itens estão concluídos -->
            <% if todo_list.items.any? && todo_list.items.all? { |item| item.conclued == true } %>
              <!-- Se SIM, risca o título -->
              <strike class="flex-grow-1">
                <h4 class="mb-0"><%= link_to todo_list.title, todo_list, class: "text-decoration-none text-dark" %></h4>
              </strike>
            <% else %>
              <h4 class="flex-grow-1 mb-0"><%= link_to todo_list.title, todo_list, class: "text-decoration-none" %></h4>
            <% end %>

            <!-- Botões alinhados -->
            <div class="d-flex align-items-center">
              <%= link_to "Edit", edit_todo_list_path(todo_list), class: "btn btn-sm btn-secondary me-2" %>
              <%= button_to "Destroy", todo_list, method: :delete, class: "btn btn-sm btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-4">
        <%= link_to "New Todo List", new_todo_list_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
