<% content_for :title, "Edit Todo List" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h2 class="text-center mb-4">Edit Todo List</h2>
      
      <%= form_for @todo_list do |f| %>
        <div class="mb-3">
          <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit "Update Todo List", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to "Back to Todo Lists", todo_lists_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
